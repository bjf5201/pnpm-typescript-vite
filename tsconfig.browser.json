{
	"compilerOptions": {
		/* Personal Prefs */
		"baseUrl": "./",
		"customConditions": ["@app"],
		"outDir": "./dist",

		/* Basics */
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.browser.tsbuildinfo",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["ESNext", "DOM", "DOM.AsyncIterable", "WebWorker"],
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,

		/* Bundler Mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["react", "react-dom", "node", "vitest/globals", "vite/client"],
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true,

		/* Linting & Strictness */
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["src", "test"]
}
