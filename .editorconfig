root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
end_of_line = lf
max_line_length = 80

[*.{js,jsx,ts,tsx}]
indent_style = space

[*.{md,html,css,json,yml}]
trim_trailing_whitespace = false

[*.{html,md}]
max_line_length = 100
