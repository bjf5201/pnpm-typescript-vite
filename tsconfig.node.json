{
  "extends": "./configs/tsconfig.base.json",
  "compilerOptions": {
    /* Build Config */
    "rootDir": "./",
    "lib": ["ESNext"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": [
      "node",
      "vitest/globals",
      "vite/client"
    ]
  },
  "include": [
    "lib/**/*",
    "configs/**/*",
    "tests/**/*",
		"vite.config.ts",
		"*.config.js",
  ],
  "exclude": [
    "node_modules",
    ".husky",
    "dist",
    ".vscode",
    "app",
    "public",
    "tests/app_tests"
  ]
}
